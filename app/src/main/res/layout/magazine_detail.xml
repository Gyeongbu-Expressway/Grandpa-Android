<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/magazinedetail_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/magazineback" />

    <View
        android:id="@+id/magazinetop_devider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#54A12F"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/magazinedetail_Image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/home"  />

            <TextView
                android:id="@+id/magazinedetail_content"
                android:padding="20dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/magazinebottom_devider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#54A12F"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"/>

    <ImageView
        android:id="@+id/magazinedetail_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/magazinedetail_magazine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/magazinedetail_magazine"
        app:srcCompat="@drawable/offprofile" />

    <ImageView
        android:id="@+id/magazinedetail_magazine"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/magazinedetail_check"
        app:layout_constraintEnd_toStartOf="@+id/magazinedetail_profile"
        app:layout_constraintStart_toEndOf="@+id/magazinedetail_check"
        app:layout_constraintTop_toTopOf="@+id/magazinedetail_check"
        app:srcCompat="@drawable/onmagazine" />

    <ImageView
        android:id="@+id/magazinedetail_check"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:srcCompat="@drawable/offcheck" />

    <ImageView
        android:id="@+id/magazinedetail_heart"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/magazinedetail_check"
        app:layout_constraintEnd_toStartOf="@+id/magazinedetail_check"
        app:layout_constraintStart_toEndOf="@+id/magazinedetail_search"
        app:layout_constraintTop_toTopOf="@+id/magazinedetail_check"
        app:srcCompat="@drawable/offheart" />

    <ImageView
        android:id="@+id/magazinedetail_search"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/magazinedetail_heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/magazinedetail_heart"
        app:srcCompat="@drawable/offsearch" />

</androidx.constraintlayout.widget.ConstraintLayout>