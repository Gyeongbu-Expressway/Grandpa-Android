<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_constraint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/review_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/esc" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="270dp"
        android:layout_height="430dp"
        app:layout_constraintTop_toBottomOf="@+id/review_back"
        tools:layout_editor_absoluteX="20dp">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/review_topImage"
                android:layout_width="60dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/signprofile" />

            <TextView
                android:id="@+id/review_topName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="이름"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/review_topcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="본문"
                android:textSize="15dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topstar_constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/review_topstar1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/emptystar"
                    app:layout_constraintStart_toStartOf="@+id/topstar_constraint"/>

                <ImageView
                    android:id="@+id/review_topstar2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/review_topstar1"
                    app:layout_constraintStart_toEndOf="@+id/review_topstar1"
                    app:layout_constraintTop_toTopOf="@+id/review_topstar1"
                    app:srcCompat="@drawable/emptystar" />

                <ImageView
                    android:id="@+id/review_topstar3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/review_topstar2"
                    app:layout_constraintStart_toEndOf="@+id/review_topstar2"
                    app:layout_constraintTop_toTopOf="@+id/review_topstar2"
                    app:srcCompat="@drawable/emptystar" />

                <ImageView
                    android:id="@+id/review_topstar4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/review_topstar3"
                    app:layout_constraintStart_toEndOf="@+id/review_topstar3"
                    app:layout_constraintTop_toTopOf="@+id/review_topstar3"
                    app:srcCompat="@drawable/emptystar" />

                <ImageView
                    android:id="@+id/review_topstar5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/review_topstar4"
                    app:layout_constraintStart_toEndOf="@+id/review_topstar4"
                    app:layout_constraintTop_toTopOf="@+id/review_topstar4"
                    app:srcCompat="@drawable/emptystar" />

                <TextView
                    android:id="@+id/review_topstaravg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="0.0"
                    app:layout_constraintBottom_toBottomOf="@+id/review_topstar5"
                    app:layout_constraintStart_toEndOf="@+id/review_topstar5"
                    app:layout_constraintTop_toTopOf="@+id/review_topstar5" />

                <TextView
                    android:id="@+id/review_topstarcnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="0 개"
                    app:layout_constraintBottom_toBottomOf="@+id/review_topstaravg"
                    app:layout_constraintStart_toEndOf="@+id/review_topstaravg"
                    app:layout_constraintTop_toTopOf="@+id/review_topstaravg" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/review_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="#000000" />

            <TextView
                android:id="@+id/review_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="후기"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/review_underImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/signprofile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/review_underName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textSize="16dp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/under_constraint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/review_understar1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/emptystar" />

                        <ImageView
                            android:id="@+id/review_understar2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/review_understar1"
                            app:layout_constraintStart_toEndOf="@+id/review_understar1"
                            app:layout_constraintTop_toTopOf="@+id/review_understar1"
                            app:srcCompat="@drawable/emptystar" />

                        <ImageView
                            android:id="@+id/review_understar3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/review_understar2"
                            app:layout_constraintStart_toEndOf="@+id/review_understar2"
                            app:layout_constraintTop_toTopOf="@+id/review_understar2"
                            app:srcCompat="@drawable/emptystar" />

                        <ImageView
                            android:id="@+id/review_understar4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/review_understar3"
                            app:layout_constraintStart_toEndOf="@+id/review_understar3"
                            app:layout_constraintTop_toTopOf="@+id/review_understar3"
                            app:srcCompat="@drawable/emptystar" />

                        <ImageView
                            android:id="@+id/review_understar5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintBottom_toBottomOf="@+id/review_understar4"
                            app:layout_constraintStart_toEndOf="@+id/review_understar4"
                            app:layout_constraintTop_toTopOf="@+id/review_understar4"
                            app:srcCompat="@drawable/emptystar" />

                        <TextView
                            android:id="@+id/review_underavg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="5.0"
                            app:layout_constraintBottom_toBottomOf="@+id/review_understar5"
                            app:layout_constraintStart_toEndOf="@+id/review_understar5"
                            app:layout_constraintTop_toTopOf="@+id/review_understar5" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/review_undercontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="본문"
                android:textSize="15dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>