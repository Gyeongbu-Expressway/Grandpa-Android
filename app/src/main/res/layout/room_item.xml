<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#54B327"
    android:backgroundTint="@color/yellowgreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/room_item_design"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/item_roomImage"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home" />

        <TextView
            android:id="@+id/item_buildingType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="건물유형"
            android:textColor="#605D5D"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/item_roomImage"
            app:layout_constraintTop_toTopOf="@+id/item_roomImage" />

        <TextView
            android:id="@+id/item_roomSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="방크기"
            android:textColor="#605D5D"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/item_buildingType"
            app:layout_constraintTop_toTopOf="@+id/item_buildingType" />

        <TextView
            android:id="@+id/item_roomDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보증금"
            android:textColor="#605D5D"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/item_buildingType"
            app:layout_constraintTop_toBottomOf="@+id/item_buildingType" />

        <TextView
            android:id="@+id/item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="건물위치"
            android:textColor="#201F1F"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/item_roomDeposit"
            app:layout_constraintTop_toBottomOf="@+id/item_roomDeposit" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="제목"
            android:textColor="#323131"
            app:layout_constraintStart_toStartOf="@+id/item_address"
            app:layout_constraintTop_toBottomOf="@+id/item_address" />

        <TextView
            android:id="@+id/item_buildingHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="층수"
            android:textColor="#605D5D"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/item_sizeUnit"
            app:layout_constraintTop_toTopOf="@+id/item_sizeUnit" />

        <TextView
            android:id="@+id/item_sizeUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="단위"
            android:textColor="#605D5D"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/item_roomSize"
            app:layout_constraintTop_toTopOf="@+id/item_roomSize" />

        <TextView
            android:id="@+id/item_roomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="월세 "
            android:textColor="#605D5D"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/item_roomDeposit"
            app:layout_constraintTop_toTopOf="@+id/item_roomDeposit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>