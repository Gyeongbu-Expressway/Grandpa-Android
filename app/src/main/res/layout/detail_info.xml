<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detailInfo_back"
        android:layout_width="37dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/detailInfo_scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/esc" />

    <TextView
        android:id="@+id/detailInfo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세 정보"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/detailInfo_scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/detailInfo_divider"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#54A12F"
        app:layout_constraintBottom_toTopOf="@+id/detailInfo_scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/detailInfo_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/detailInfo_ruleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="규칙" />

            <TextView
                android:id="@+id/detailInfo_rule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="규칙 1" />
            <TextView
                android:id="@+id/detailInfo_rule2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="규칙 2" />
            <TextView
                android:id="@+id/detailInfo_rule3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="규칙 3" />
            <TextView
                android:id="@+id/detailInfo_rule4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="규칙 4" />

            <TextView
                android:id="@+id/detailInfo_careServiceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="돌봄 서비스"/>
            <TextView
                android:id="@+id/detailInfo_careService1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="돌봄 서비스 1" />
            <TextView
                android:id="@+id/detailInfo_careService2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="돌봄 서비스 2" />
            <TextView
                android:id="@+id/detailInfo_careService3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="돌봄 서비스 3" />
            <TextView
                android:id="@+id/detailInfo_careService4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="돌봄 서비스 4" />
            <TextView
                android:id="@+id/detailInfo_careService5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="돌봄 서비스 5" />

            <TextView
                android:id="@+id/detailInfo_safetyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="안전" />
            <TextView
                android:id="@+id/detailInfo_safety1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="안전 1" />
            <TextView
                android:id="@+id/detailInfo_safety2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="안전 2" />
            <TextView
                android:id="@+id/detailInfo_safety3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="안전 3" />
            <TextView
                android:id="@+id/detailInfo_safety4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="안전 4" />
            <TextView
                android:id="@+id/detailInfo_safety5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="안전 5" />

            <TextView
                android:id="@+id/detailInfo_petTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="반려동물" />

            <TextView
                android:id="@+id/detailInfo_dog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="동물"
                android:textSize="18dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/detailInfo_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="동물" />

            <TextView
                android:id="@+id/detailInfo_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textSize="18dp"
                android:text="동물" />


        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>